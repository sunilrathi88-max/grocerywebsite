{
  "name": "tattva-co.---indian-gourmet-products",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns='(hooks|utils)' --coverage",
    "test:components": "jest --testPathPatterns='components' --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "cypress:run:edge": "cypress run --browser edge",
    "test:e2e": "cypress run",
    "test:e2e:headed": "cypress run --headed",
    "test:ci": "cypress run --browser chrome --headless",
    "percy:test": "percy exec -- cypress run",
    "percy:open": "percy exec -- cypress open",
    "percy:snapshot": "percy exec -- cypress run --spec 'cypress/e2e/08-visual-regression.cy.ts'",
    "images:convert": "node scripts/convertToWebP.js",
    "images:convert:responsive": "node scripts/convertToWebP.js --responsive",
    "lighthouse": "lhci autorun",
    "lighthouse:local": "npm run build && npm run preview & wait-on http://localhost:4173 && lhci autorun && kill %1",
    "test:all": "npm run test:unit && npm run test:e2e && npm run lighthouse"
  },
  "dependencies": {
    "framer-motion": "11.0.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-slick": "^0.31.0",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@cypress/webpack-dev-server": "^5.1.3",
    "@eslint/js": "^9.38.0",
    "@lhci/cli": "^0.15.1",
    "@percy/cypress": "^3.1.6",
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.0",
    "cypress": "^15.5.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0",
    "prettier": "^3.6.2",
    "puppeteer": "^21.4.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.1.0",
    "wait-on": "^9.0.1",
    "workbox-window": "^7.3.0"
  }
}
